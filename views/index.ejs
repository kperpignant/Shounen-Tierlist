<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shounen Tier List</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Best Shounen Tier List</h1>

  <!-- ----ChatGPT HELP-------- -->
  <div class="tier-list">
    <% ['S', 'A', 'B', 'C', 'D'].forEach(tier => { %>
      <div class="tier <%= tier.toLowerCase() %>-tier" data-tier="<%= tier %>">
        <div class="tier-label"><%= tier %></div>
        <div class="tier-content" data-tier="<%= tier %>">
          <% messages.filter(m => m.tier === tier).forEach(m => { %>
            <div class="item" draggable="true" data-name="<%= m.name %>">
              <%= m.name %>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>
<!-- ----ChatGPT HELP-------- -->
  <!-- ===== Add New Anime Form ===== -->
  <h2>Add a New Series</h2>
  <form action="/messages" method="POST">
    <input type="text" placeholder="Series Name" name="name" required>
    <!-- <input type="text" placeholder="Comment / Description" name="msg"> -->
    <button type="submit">Add</button>
  </form>

  <script src="main.js"></script>
</body>
</html>
